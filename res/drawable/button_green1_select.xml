<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:state_pressed="false" >
        <shape>
            <gradient
                android:startColor="#ff3cb371"
                android:endColor="#ff3cb371"
                android:gradientRadius="100" />
            <stroke 
                android:width="1dip" 
				android:color="#ff006400" /> 
            <corners
                android:radius="4dip" />        
            <padding 								
				android:left="5dip"
				android:top="5dip"
				android:right="5dip"
				android:bottom="5dip" />           
        </shape>
    </item>
    
    <item android:state_pressed="true">       
        <shape>
            <gradient
                android:startColor="#ff008b45"
                android:endColor="#ff008b45" 
                android:type="radial"
                android:gradientRadius="100" />
            <stroke 
                android:width="1dip" 
				android:color="#ff006400" /> 
            <corners
                android:radius="4dip" />        
            <padding 								
				android:left="5dip"
				android:top="5dip"
				android:right="5dip"
				android:bottom="5dip" />         
        </shape>
    </item>
</selector>

