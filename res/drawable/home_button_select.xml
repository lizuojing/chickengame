<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="false" >
        <shape>
            <gradient
                android:startColor="#882e8b57"
                android:endColor="#882e8b57"
                android:type="radial"
                android:gradientRadius="60" />
            <stroke 
                android:width="1.5dip" 
				android:color="#ff008b45" /> 
            <corners
                android:radius="20dip" />                   
        </shape>
     </item>
    
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ff43cd80"
                android:endColor="#ff43cd80"
                android:gradientRadius="0" />
            <stroke 
                android:width="1dip" 
				android:color="#ff008b45" /> 
            <corners
                android:radius="20dip" />               
        </shape>
    </item>
</selector>

