<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Activity主题-->
	<style name="ContentOverlay" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@color/yellow</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--ListView公共样式-->
	<style name="listview_style">
	    <item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:cacheColorHint">#00000000</item>
		<item name="android:divider">#ff43cd80</item>
		<item name="android:dividerHeight">0.5dip</item>
		<item name="android:fadingEdge">none</item>
		<item name="android:fastScrollEnabled">true</item>
		<item name="android:focusable">true</item>
		<item name="android:scrollbars">none</item>
	</style>
	<style name="home_btn_style">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/yellow</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:padding">10dip</item>
	    <item name="android:layout_margin">5dip</item>
	    <item name="android:singleLine">true</item>
	</style>
	<!--图片加载进度条-->
	<style name="body_progressbar_style" parent="@android:style/Widget.ProgressBar.Large">
		<item name="android:indeterminateDrawable">@anim/load_image</item>
		<item name="android:layout_width">50dip</item>
		<item name="android:layout_height">50dip</item>
		<item name="android:visibility">visible</item>
		<item name="android:layout_centerInParent">true</item>
	</style>
	<style name="pay_tv_style">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">@color/btn_bulletin_normal</item>
	    <item name="android:textSize">15sp</item>
	    <item name="android:layout_weight">1.0</item>
	    <item name="android:padding">5dip</item>
	   	<item name="android:gravity">center_horizontal</item>
	    <item name="android:layout_margin">3dip</item>
	    <item name="android:singleLine">true</item>
	</style>
</resources>