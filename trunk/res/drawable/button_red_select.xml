<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
 
    <item android:state_pressed="false" >
        <shape>
			<!-- 渐变 -->
            <gradient
                android:startColor="#ffcd3333"
                android:endColor="#ffcd3333"
                android:gradientRadius="100" />
            <!-- 边缘颜色和宽度 --> 
            <stroke 
                android:width="1dip" 
				android:color="#ff006400" /> 
				<!-- 圆角 -->
            <corners
                android:radius="5dip" />        
            <padding 								
				android:left="10dip"
				android:top="10dip"
				android:right="10dip"
				android:bottom="10dip" />           
        </shape>
    </item>
    
    <item android:state_pressed="true">       
        <shape>
            <gradient
                android:startColor="#ffff0000"
                android:endColor="#ffff0000" 
                android:type="radial"
                android:gradientRadius="100" />
             	<!-- 边缘颜色和宽度 --> 
            <stroke 
                android:width="1dip" 
				android:color="#ff006400" /> 
				<!-- 圆角 -->
            <corners
                android:radius="5dip" />        
            <padding 								
				android:left="10dip"
				android:top="10dip"
				android:right="10dip"
				android:bottom="10dip" />         
        </shape>
    </item>
</selector>

